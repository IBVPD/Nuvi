{
    "name": "ns/sentinel",
    "license": "MIT",
    "type": "project",
    "description": "A distributed disease reporting tool",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.3.*",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.2.*",
        "twig/extensions": "1.0.*",
        "symfony/assetic-bundle": "2.3.*",
        "symfony/swiftmailer-bundle": "2.3.*",
        "symfony/monolog-bundle": "2.3.*",
        "sensio/distribution-bundle": "2.3.*",
        "sensio/framework-extra-bundle": "2.3.*",
        "sensio/generator-bundle": "2.3.*",
        "incenteev/composer-parameter-handler": "~2.0",
	"symfony/icu": "1.1.*",

        "jms/security-extra-bundle": "1.5.x-dev",
        "jms/di-extra-bundle": "~1.1",

        "knplabs/knp-menu-bundle": "1.1.*",
        
        "sonata-project/admin-bundle": "~2.2",
        "sonata-project/cache-bundle": "~2.1",
        "sonata-project/block-bundle": "~2.2",
        "sonata-project/jquery-bundle": "~1.8",
        "sonata-project/doctrine-orm-admin-bundle": "~2.2",
        "sonata-project/intl-bundle": "~2.2",
        "sonata-project/exporter": "~1.1",
	"sonata-project/core-bundle": "~2.2@dev",

        "ns/util-bundle": "dev-master",
        "ns/security-bundle": "dev-master",
        "ns/ace-bundle": "dev-master",
        "ns/flash-bundle": "dev-master",

        "jms/translation-bundle": "1.1.x-dev",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "gedmo/doctrine-extensions": "~2.3",
        "stof/doctrine-extensions-bundle": "1.1.x-dev",
        "punkave/symfony2-file-uploader-bundle": "dev-master",
        "oneup/uploader-bundle": "1.0.*@dev",
        "lexik/form-filter-bundle": "dev-master",
        "knplabs/knp-paginator-bundle": "~2.4",
        "lunetics/locale-bundle": "~2.2",
        "friendsofsymfony/oauth-server-bundle": "~1.4",
        "nelmio/api-doc-bundle": "2.5.*",
        "friendsofsymfony/rest-bundle": "1.4.x-dev",
        "jms/serializer-bundle": "0.12.*",
        "adoy/oauth2": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.3-dev"
        }
    },
    "repositories": [ 
			{ "type": "composer", "url": "http://packages.noblet.ca/" }
		    ],
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "behat/behat": "2.4.*@stable",
        "behat/mink":  "1.4.*@stable",

        "behat/symfony2-extension":      "*",
        "behat/mink-extension":          "*",
        "behat/mink-browserkit-driver":  "*"
    }
}
