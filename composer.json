{
    "name": "ns/sentinel",
    "license": "MIT",
    "type": "project",
    "description": "A distributed disease reporting tool",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "~2.7",
        "doctrine/orm": "~2.2,>=2.2.3,<2.5",
        "doctrine/dbal": "<2.5",
        "doctrine/doctrine-bundle": "~1.4",
        "twig/extensions": "~1.0",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~3.0,>=3.0.12",
        "sensio/framework-extra-bundle": "~3.0,>=3.0.2",
        "incenteev/composer-parameter-handler": "~2.0",
        "symfony/icu": "1.1.*",

        "jms/security-extra-bundle": "1.5.x-dev",
        "jms/di-extra-bundle": "~1.1",

        "knplabs/knp-menu-bundle": "1.1.*",
        
        "sonata-project/admin-bundle": "~2.3",
        "sonata-project/cache-bundle": "~2.1",
        "sonata-project/block-bundle": "~2.2",
        "sonata-project/doctrine-orm-admin-bundle": "~2.2",
        "sonata-project/intl-bundle": "~2.2",
        "sonata-project/exporter": "~1.1",
        "sonata-project/core-bundle": "~2.2@dev",

        "ns/util-bundle": "~1.0",
        "ns/security-bundle": "2.7.x-dev",
        "ns/ace-bundle": "~1.3",
        "ns/flash-bundle": "dev-master",

        "jms/translation-bundle": "1.1.x-dev",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "gedmo/doctrine-extensions": "~2.3",
        "stof/doctrine-extensions-bundle": "~1.1",
        "punkave/symfony2-file-uploader-bundle": "dev-master",
        "oneup/uploader-bundle": "1.0.*@dev",
        "lexik/form-filter-bundle": "~2.1",
        "knplabs/knp-paginator-bundle": "~2.4",
        "lunetics/locale-bundle": "~2.2",

        "friendsofsymfony/oauth-server-bundle": "dev-patch-1 as 1.4.x-dev",
        "nelmio/api-doc-bundle": "2.7.*",
        "friendsofsymfony/rest-bundle": "~1.7",
        "jms/serializer-bundle": "~1.0",
        "adoy/oauth2": "dev-master",
        "liip/functional-test-bundle": "dev-master",
        "beberlei/DoctrineExtensions": "dev-master",
        "ddeboer/data-import-bundle": "~0.1",
        "ddeboer/data-import": "dev-gnat",
        "hpatoio/deploy-bundle": "~1.4",
        "h4cc/alice-fixtures-bundle": "0.5.*",
        "phpoffice/phpexcel": "~1.8",
        "vich/uploader-bundle": "1.0.0-beta4"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.3-dev"
        }
    },
    "repositories": [ 
                        { "type": "composer", "url": "http://packages.noblet.ca/" },
                        { "type": "vcs", "url": "https://github.com/gnat42/FOSOAuthServerBundle" },
                        { "type": "vcs", "url": "https://github.com/gnat42/data-import" }
                    ],
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpmd/phpmd": "@stable",

        "behat/behat": "3.0.*",
        "behat/mink":  "1.6.*",
        "behat/symfony2-extension":      "2.0.*",
        "behat/mink-extension":          "2.0.*",
        "behat/mink-browserkit-driver":  "*"
    }
}
