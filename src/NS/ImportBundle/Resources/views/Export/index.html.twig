{%extends "::base.html.twig" %}
{%block pagetitle %}{{'Export'|trans}}{%endblock %}

{%block body %}
<div class="row">
    {% for route,values in forms %}
        <div class="col-sm-5">
            <div class="widget-box widget-color-blue">
                <div class="widget-header widget-header-small">
                    <h5 class="widget-title">{{values.title|trans}}</h5>
                </div>
                <div class="widget-body">
                    <div class="widget-main">
                        <form action="{{ path(route) }}" method="POST">
                            {{ form_errors(values.form) }}
                            <div class="row">
                                <div class="col col-sm-6">
                                    {{ form_row(values.form.adm_date) }}
                                </div>
                                <div class="col col-sm-6">
                                    {{ form_row(values.form.createdAt) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col col-sm-6">
                                    {{ form_row(values.form.exportFormat) }}
                                    {% if values.form.pahoFormat is defined %}
                                        {{ form_row(values.form.pahoFormat) }}
                                    {% endif %}
                                </div>
                                <div class="col col-sm-6">
                                    {% if values.form.areas is defined %}
                                        {{ form_row(values.form.areas) }}
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                {% if values.form.country is defined %}
                                    <div class="col col-sm-6">{{ form_row(values.form.country) }}</div>
                                {% endif %}
                                {% if values.form.site is defined %}
                                    <div class="col col-sm-6">{{ form_row(values.form.site) }}</div>
                                {% endif %}
                            </div>
                            {{ form_rest(values.form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{%endblock%}
