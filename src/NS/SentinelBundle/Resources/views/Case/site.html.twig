<table id="{{tableId}}" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>{{ knp_pagination_sortable(results, 'Case ID', 'm.id') }}</th>
            <th>{{ knp_pagination_sortable(results, 'Site Case ID', 'm.case_id') }}</th>
            <th>{{ knp_pagination_sortable(results, 'First Name', 'm.firstName') }}</th>
            <th>{{ knp_pagination_sortable(results, 'Last Name', 'm.lastName') }}</th>
            <th>{{ knp_pagination_sortable(results, 'Admitted', 'm.adm_date') }}</th>
            <th class="hidden-480">{{'Status'|trans}}</th>
            <th>{{'Actions'|trans}}</th>
        </tr>
    </thead>
    <tbody>
        {% for row in results %}
            <tr>
                <td>{{ row.id }}</td>
                <td>{{ row.caseId }}</td>
                <td>{{ row.firstName }}</td>
                <td>{{ row.lastName }}</td>
                <td>{% if row.admDate %}{{ row.admDate|date('d/m/Y') }}{% endif %}</td>
                <td class='hidden-480'>
                    {{ case_label(row,'EPI'|trans) }}
                    {{ case_lab_label(row,'LAB'|trans) }}
                    {{ case_nl_label(row,'NL'|trans) }}
                    {{ case_rrl_label(row,'RRL'|trans) }}
                </td>
                <td>
                    <div class="inline position-relative">{{case_sm_actions(row)}}</div>
                </td>
            </tr>
        {% endfor %}
        <tr class="visible-sm hidden-md hidden-lg" style="height: 100px;"><td></td></tr>
    </tbody>
</table>
