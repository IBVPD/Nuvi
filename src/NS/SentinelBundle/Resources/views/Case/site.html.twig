<table id="{{tableId}}" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>{{'Site Case ID'|trans}}</th>
            <th>{{'First Name'|trans}}</th>
            <th>{{'Last Name'|trans}}</th>
            <th>{{'Admitted'|trans}}</th>
            <th class="hidden-480">{{'Status'|trans}}</th>
            <th>{{'Actions'|trans}}</th>
        </tr>
    </thead>
    <tbody>
        {% for row in results %}
            <tr>
                <td>{{ row.caseId }}</td>
                <td>{{ row.firstName }}</td>
                <td>{{ row.lastName }}</td>
                <td>{% if row.admDate %}{{ row.admDate|date('d/m/Y') }}{% endif %}</td>
                <td class='hidden-480'>
                    {{case_label(row,'EPI'|trans)}}
                    {{case_lab_label(row,'LAB'|trans)}}
                </td>
                <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">{{case_big_actions(row,false)}}</div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                        <div class="inline position-relative">{{case_sm_actions(row)}}</div>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
