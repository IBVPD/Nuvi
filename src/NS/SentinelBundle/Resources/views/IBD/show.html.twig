                        </tr>
                        <tr>
                            <th>{{'meningitis-form.age'|trans}}</th>
                            <td>{{record.age}}</td>
                        </tr>
                        <tr>
                            <th>{{'meningitis-form.gender'|trans}}</th>
                            <td>{{record.gender}}</td>
                        </tr>
                        <tr>
                            <th>{{'meningitis-form.first-name'|trans}}</th>
