{%extends "NSSentinelBundle::layout.html.twig" %}

{% block pagetitle %}
{{'Edit %type% For Case %id%'|trans({'%id%': form.vars.value.case.caseId,'%type%': type})}}
{% endblock %}

{%block pageactions %}
<div class="pull-right">{{case_big_actions(form.vars.value.case)}}</div>
{%endblock %}

{% block body %}
{{form_errors(form)}}
<form method="POST" action="{{path('meningitis'~type~'Edit',{'id':id})}}" novalidate>
<div class="row">
    <div class="col-sm-12">
        <div class="tabbable">
            <ul class="nav nav-tabs padding-12 tab-color-blue background-blue" id="myTab4">
                <li class="active"><a data-toggle="tab" href="#labinfo">{{'Lab Information'|trans}}</a></li>
            </ul>
        </div>
        <div class="tab-content">
            <div id="labinfo" class="tab-pane active">
                
                <div class="row">
                    <div class="col-sm-4">
                        {{form_row(form.sampleType)}}
                    </div>
                    <div class="col-sm-4">
                        {{form_row(form.dateReceived)}}
                    </div>
                    <div class="col-sm-4">
                        {{form_row(form.labId)}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        {{form_row(form.volume)}}
                    </div>
                    <div class="col-sm-4">
                        {{form_row(form.DNAExtractionDate)}}
                        {{form_row(form.DNAVolume)}}
                    </div>
                    <div class="col-sm-4">
                        {{form_row(form.isolateViable)}}
                        {{form_row(form.isolateType)}}                    
                    </div>
                </div>
            </div>
        </div>

        <div class="tabbable">
            <ul id="dynamicFormTabs" class="nav nav-tabs padding-12 tab-color-blue background-blue">
                {% for sampleForm in form.samples %}
                    <li{% if loop.first %} class="ready active"{%endif%}><a data-toggle="tab" href="#{{sampleForm.vars.value.getTypeByClass()|replace({' ':'_'})}}">{{sampleForm.vars.value.getTypeByClass()}}</a></li>
                {% endfor %}
            </ul>
        </div>

        <div class="samples tab-content" data-prototype="{{ form_widget(form.samples.vars.prototype)|e }}">
            {% for sampleForm in form.samples %}
                <div class="tab-pane{% if loop.first %} ready active{%endif%}" id="{{sampleForm.vars.value.getTypeByClass()|replace({' ':'_'})}}">
                    <div class="row">
                        <div class="col-sm-3">
                            {{form_row(sampleForm.type)}}
                            {{form_row(sampleForm.pathogenIdentifierMethod)}}
                            {{form_row(sampleForm.pathogenIdentifierOther)}}
                            {{form_row(sampleForm.serotypeIdentifier)}}
                            {{form_row(sampleForm.serotypeIdentifierOther)}}
                        </div>
                        <div class="col-sm-3">
                            {{form_row(sampleForm.lytA)}}
                            {{form_row(sampleForm.sodC)}}
                            {{form_row(sampleForm.hpd)}}
                            {{form_row(sampleForm.rNaseP)}}
                        </div>
                        <div class="col-sm-3">
                            {{form_row(sampleForm.spnSerotype)}}
                            {{form_row(sampleForm.spnSerotypeOther)}}
                            {{form_row(sampleForm.hiSerotype)}}
                            {{form_row(sampleForm.hiSerotypeOther)}}
                            {{form_row(sampleForm.nmSerogroup)}}
                            {{form_row(sampleForm.nmSerogroupOther)}}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {{form_row(form._token)}}                    
        <div class="form-actions center">
            <a href="{{path('meningitisIndex')}}" class="btn btn-sm btn-danger">{{'Cancel'|trans}}</a> <button type="submit" class="btn btn-sm btn-success">{{'Save'|trans}}<i class="icon-arrow-right icon-on-right bigger-110"></i></button>
        </div>
    </div>
</div>

</form>
<script type="text/javascript">
    var dynamicTab = false;
    var $collectionHolder;

    jQuery(document).ready(function() {
        // Get the ul that holds the collection of tags
        $collectionHolder = $('div.samples');
        $collectionTabs   = $('#dynamicFormTabs');

        // count the current form inputs we have (e.g. 2), use that as the new
        // index when inserting a new item (e.g. 2)
        $collectionHolder.data('index', $collectionHolder.find(':input').length);

        $('input[name="ibd_nationallab[sampleType][]"]').change(function(event)
        {
            var $checkbox = $(event.target);
            var v         = $checkbox.val().replace(/\s+/g, '');
            var div       = $('div#tab_'+v);
            var divTab    = $('a[data-toggle][href="#tab_'+v+'"]').parent('li');
            
            if($checkbox.is(':checked') && !div.length)
            {
                addSampleForm($collectionHolder, $checkbox);
            }
            else if(!$checkbox.is(':checked') && div.length)
            {
                div.removeClass('active').removeClass('ready');
                divTab.hide().removeClass('active');
                nextActive($collectionHolder);
                    
            }
            else if($checkbox.is(':checked') && div.length)
            {
                div.addClass('ready');
                divTab.show();
                nextActive($collectionHolder);
            }
        });
    });
    
    function nextActive($collectionHolder)
    {
        if(!$collectionHolder.find('.tab-pane.active').length)
        {
            var f = $collectionHolder.find('.tab-pane.ready:first');
            if(f.length)
            {
                $(f).addClass('active');
                $('a[data-toggle][href="#'+$(f).attr('id')+'"]').parent('li').addClass('active');
            }
        }
    }

    function addSampleForm($collectionHolder, field) 
    {
            var f = field;
            var v = $(f).val().replace(/\s+/g, '');
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormTab = $('<div class="tab-pane ready" id="tab_'+v+'"></div>').append('<h3>'+$(f).val()+'</h3>').append(newForm);
            var $newTab = $('<li><a data-toggle="tab" href="#tab_'+v+'">'+$(f).val()+'</a></li>');
            $newFormTab.find('input[type=hidden]').val($(f).val());
            $collectionHolder.append($newFormTab);
            $collectionTabs.append($newTab);

            if(!dynamicTab)
            {
                $newFormTab.addClass('active');
                $newTab.addClass('active');
                dynamicTab = true;
            }
    }
</script>
{% endblock %}
