{%extends "NSSentinelBundle::layout.html.twig" %}
{% block pagetitle %}{{'Recent Cases'|trans}}{%endblock %}
{% block pagedescription %}{{'Lists the last %count% meningitis cases'|trans({'%count%':app.session.get('result_per_page',10)})}}{%endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-9 col-md-9 col-lg-9">
        <div class="widget-box no-border">
            <div class="widget-header widget-header-small header-color-blue">
                <h5>{{'Latest Meningitis Cases'|trans}}</h5>
                {% if is_granted('ROLE_CAN_CREATE') %}
                    <div class="widget-toolbar">
                        <a href="#modal-form" id="modal-form-create" data-toggle="modal" class="btn btn-xs btn-success">{{'Create/Edit'|trans}}<i class="icon-plus-sign icon-on-right bigger-110"></i></a>
                    </div>
                {% endif %}                
                <div class="widget-toolbar"><form method="POST" action="{{ path('meningitisIndex',pagination.query)}}">{{form_rest(form)}}</form></div>
                <div class="widget-toolbar no-border">{{ knp_pagination_render(pagination) }}</div>
            </div>
            <div class="table-responsive">
                <table id="ibdCases" class="table table-striped table-bordered table-hover">
                    {% include t.header_template %}
                    <tbody>
                    {% for row in pagination %}
                        {% include t.row_template %}
                    {% endfor %}
                    </tbody>
                </table>
            {% if is_granted('ROLE_CAN_CREATE') %}
                <div class="align-right">
                    <a href="#modal-form" id="modal-form-create" data-toggle="modal" class="btn btn-sm btn-success">{{'Create/Edit'|trans}}<i class="icon-plus-sign icon-on-right bigger-110"></i></a>
                </div>
            {% endif %}
            </div>
        </div>
    </div>
    <div class="col-xs-3 widget-container-span">
        <div class="widget-box">
            <div class="widget-header widget-header-small header-color-blue">
                <h5>{{'Filters'|trans}}</h5>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form method="GET" action="{{path('meningitisIndex')}}" >
                        {{form_rest(filterForm)}}
                    </form>
                </div>
            </div>
        </div>        
    </div>
</div>
{% if is_granted('ROLE_CAN_CREATE') %}
<div id="modal-form" id="modal-form" class="modal" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">x</button>
                <h4 class="blue bigger">{{'Create Case'}}</h4>
            </div>
            <form method="POST" action="{{path('meningitisCreate')}}">

            <div class="modal-body overflow-visible">
                <div class="row">
                    <div class="col-xs-12 col-sm-5">
                        {{form_rest(createForm)}}
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-sm" data-dismiss="modal">
                    <i class="icon-remove"></i> {{'Cancel'|trans}}
                </button>

                <button class="btn btn-sm btn-primary" id="ibd_create_submit">
                    <i class="icon-ok"></i> {{'Create/Edit'|trans}}
                </button>
            </div>

            </form>
        </div>
    </div>
</div>
{% endif %}
<script type="text/javascript">
    //chosen plugin inside a modal will have a zero width because the select element is originally hidden
    //and its width cannot be determined.
    //so we set the width after modal is show
    $('#modal-form').on('shown.bs.modal', function() 
        {
            $(this).find('.chosen-container').each(function()
            {
                    $(this).find('a:first-child').css('width' , '210px');
                    $(this).find('.chosen-drop').css('width' , '210px');
                    $(this).find('.chosen-search input').css('width' , '200px');
            });
        });
</script>
{% endblock %}