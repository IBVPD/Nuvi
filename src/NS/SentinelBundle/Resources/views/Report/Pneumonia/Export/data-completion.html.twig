<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th rowspan="2">{{ 'Region'|trans }}</th>
        <th rowspan="2">{{ 'Country'|trans }}</th>
        <th rowspan="2">{{ 'Site'|trans }}</th>
        <th rowspan="2">{{ 'Year'|trans }}</th>
        <th rowspan="2">{{ 'Total Cases'|trans }}</th>

        <th colspan="3">{{ 'Suspected'|trans }}</th>
        <th colspan="2">{{ 'Probable'|trans }}</th>
        <th colspan="2">{{ 'Outcome'|trans }}</th>
        <th colspan="2">{{ 'Classification'|trans }}</th>

    </tr>
    <tr>
        <td>#</td>
        <td># CSF</td>
        <td>% CSF</td>

        <td>#</td>
        <td>%</td>

        <td>#</td>
        <td>%</td>

        <td>#</td>
        <td>%</td>
    </tr>
    </thead>
    <tbody>
    {% for result in sites %}
        <tr>
            <td>{{ result.site.country.region.code }}</td>
            <td>{{ result.site.country.code }}</td>
            <td>{{ result.site.code }}</td>
            <td>{{ result.year }}</td>
            <td>{{ result.totalCases }}</td>

            <td>{{ result.suspected }}</td>
            <td>{{ result.suspectedCSF }}</td>
            <td>{{ result.suspectedCSFPercent|number_format(2) }}%</td>

            <td>{{ result.probable }}</td>
            <td>{{ result.probablePercent|number_format(2) }}%</td>

            <td>{{ result.outcomeAtDischarge }}</td>
            <td>{{ result.outcomeAtDischargePercent|number_format(2) }}%</td>

            <td>{{ result.classificationAtDischarge }}</td>
            <td>{{ result.classificationAtDischargePercent|number_format(2) }}%</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
