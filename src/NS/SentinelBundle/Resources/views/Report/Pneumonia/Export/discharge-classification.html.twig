<table class="table table-responsive table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th rowspan="2">{{ 'Region'|trans }}</th>
        <th rowspan="2">{{ 'Country'|trans }}</th>
        <th rowspan="2">{{ 'Site'|trans }}</th>
        <th rowspan="2">{{ 'Year'|trans }}</th>
        <th rowspan="2">{{ 'Total Cases'|trans }}</th>
        <th colspan="2">{{ 'Lab-confirmed for HI'|trans }}</th>
        <th colspan="2">{{ 'Lab-confirmed for Spn'|trans }}</th>
        <th colspan="2">{{ 'Lab-confirmed for Nm'|trans }}</th>
        <th colspan="2">{{ 'Lab-confirmed for other organism'|trans }}</th>
        <th colspan="2">{{ 'Sepsis'|trans }}</th>
        <th colspan="2">{{ 'Probable'|trans }}</th>
        <th colspan="2">{{ 'Suspect'|trans }}</th>
        <th colspan="2">{{ 'Incomplete investigation'|trans }}</th>
        <th colspan="2">{{ 'Discarded case'|trans }}</th>
        <th colspan="2">{{ 'Unknown'|trans }}</th>
    </tr>
    <tr>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
        <td>#</td>
        <td>%</td>
    </tr>
    </thead>
    <tbody>
    {% for result in sites %}
        <tr>
            <td>{{ result.site.country.region.code }}</td>
            <td>{{ result.site.country.code }}</td>
            <td>{{ result.site.code }}</td>
            <td>{{ result.year }}</td>
            <td>{{ result.totalCases }}</td>

            <td>{{ result.hi }}</td>
            <td>{{ result.hiPercent|number_format(2) }} %</td>

            <td>{{ result.spn }}</td>
            <td>{{ result.spnPercent|number_format(2) }} %</td>

            <td>{{ result.nm }}</td>
            <td>{{ result.nmPercent|number_format(2) }}%</td>

            <td>{{ result.other }}</td>
            <td>{{ result.otherPercent|number_format(2) }}%</td>

            <td>{{ result.sepsis }}</td>
            <td>{{ result.sepsisPercent|number_format(2) }}%</td>

            <td>{{ result.probable }}</td>
            <td>{{ result.probablePercent|number_format(2) }}%</td>

            <td>{{ result.suspect }}</td>
            <td>{{ result.suspectPercent|number_format(2) }}%</td>

            <td>{{ result.incomplete }}</td>
            <td>{{ result.incompletePercent|number_format(2) }}%</td>

            <td>{{ result.discarded }}</td>
            <td>{{ result.discardedPercent|number_format(2) }}%</td>

            <td>{{ result.unknown }}</td>
            <td>{{ result.unknownPercent|number_format(2) }}%</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
