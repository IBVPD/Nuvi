<table class="table table-responsive table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th rowspan="2">{{ 'Region'|trans }}</th>
        <th rowspan="2">{{ 'Country'|trans }}</th>
        <th rowspan="2">{{ 'Site'|trans }}</th>
        <th rowspan="2">{{ 'Total Cases'|trans }}</th>
        <th colspan="2">{{ 'Stool Collected'|trans }}</th>
        <th colspan="2">{{ 'ELISA Done'|trans }}</th>
        <th colspan="2">{{ 'Has Outcome'|trans }}</th>
        <th colspan="2">{{ 'Has Classification'|trans }}</th>

    </tr>
    <tr>
        <td>#</td>
        <td>%</td>

        <td>#</td>
        <td>%</td>

        <td>#</td>
        <td>%</td>

        <td>#</td>
        <td>%</td>
    </tr>
    </thead>
    <tbody>
    {% for result in sites %}
        <tr>
            <td>{{ result.site.country.region.code }}</td>
            <td>{{ result.site.country.code }}</td>
            <td>{{ result.site.code }}</td>
            <td>{{ result.totalCases }}</td>

            <td>{{ result.stoolCollectedCount }}</td>
            <td>{{ result.stoolCollectedPercent|number_format }} %</td>

            <td>{{ result.elisaDoneCount }}</td>
            <td>{{ result.elisaDonePercent|number_format(1) }} %</td>

            <td>{{ result.outcomeCount }}</td>
            <td>{{ result.outcomePercent|number_format(1) }}%</td>

            <td>{{ result.classificationCount }}</td>
            <td>{{ result.classificationPercent|number_format(1) }}%</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
