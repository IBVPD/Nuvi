{% extends "NSSentinelBundle::layout.html.twig" %}
{% block pagetitle %}{{ 'Site Performance'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="widget-box widget-color-blue no-border">
                <div class="widget-header widget-header-small">
                    <h5 class="widget-title">{{ 'Results'|trans }}</h5>
                    {{ widget_filter_toolbox() }}
                </div>
                <div class="widget-body">
                    <div class="widget-toolbox padding-8">
                        <div class="collapse" id="filters">
                            <form method="POST" action="{{ path('reportRotaSitePerformance') }}">
                                <div class="row">
                                    <div class="col-lg-2 col-md-3">
                                        {{ form_row(form.year) }}
                                    </div>
                                    {% if form.region is defined %}
                                        <div class="col-lg-2 col-md-3">
                                            {{ form_row(form.region) }}
                                        </div>
                                    {% endif %}
                                    {% if form.country is defined %}
                                        <div class="col-lg-2 col-md-3">
                                            {{ form_row(form.country) }}
                                        </div>
                                    {% endif %}
                                    {% if form.site is defined %}
                                        <div class="col-lg-2 col-md-3">
                                            {{ form_widget(form.site) }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{ form.filter is defined ? form_widget(form.filter) }}
                                        {{ form.export is defined ? form_widget(form.export) }}
                                        {{ form.reset is defined ? form_widget(form.reset) }}
                                        {{ form_rest(form) }}
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="widget-main no-padding">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead class="thin-border-bottom">
                                <tr>
                                    <th>{{ 'Region'|trans }}</th>
                                    <th>{{ 'Country'|trans }}</th>
                                    <th colspan="2">{{ 'Site'|trans }}</th>
                                    <th>{{ 'Total Cases'|trans }}</th>
                                    <th colspan="2">{{ 'Consistent Reporting'|trans }}</th>
                                    <th>{{ 'Minimum No. Cases'|trans }}</th>
                                    <th>{{ 'Specimen Collection'|trans }}</th>
                                    <th>{{ 'Lab Confirmed'|trans }}</th>
                                </tr>
                                </thead>
                                {% for result in sites %}
                                    <tr>
                                        <td>{{ result.site.country.region.code }}</td>
                                        <td>{{ result.site.country.code }}</td>
                                        <td>{{ result.site.code }}</td>
                                        <td>{{ result.site.name }}</td>
                                        <td>{{ result.totalCases }}</td>
                                        {#
                                            1. Consistent reporting throughout year
                                                b. Zero reporting if no cases
                                                a. 12 months
                                        #}

                                        <td>{{ consistentReporting(result) }}</td>
                                        <td>{{ result.consistentReportingCount }}</td>

                                        {#2. ≥100 suspected diarrhea cases reported annually#}
                                        <td>{{ minimumCases(result) }}<br/>{{ result.minimumNumberOfCasesString|trans }}
                                        </td>
                                        {#3. ≥90% of suspect cases with specimen collected within 2 days of admission#}
                                        <td class="no-padding specimenCollection">
                                            <div class="well no-margin no-padding">{{ specimenCollected(result) }}</div>
                                        </td>
                                        {#4. ≥90% of specimens tested for rotavirus by EIA#}
                                        <td class="no-padding specimenCollection">
                                            <div class="well no-margin no-padding">{{ labConfirmed(result) }}</div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
