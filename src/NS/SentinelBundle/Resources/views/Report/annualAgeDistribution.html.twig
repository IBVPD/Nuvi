{%extends "NSSentinelBundle::layout.html.twig" %}
{% block body %}
<div class="row">
    <div class="col-xs-9">
        <div class="widget-box no-border">
            <div class="widget-header widget-header-small header-color-blue">
                <h5>{{'Results'|trans}}</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th colspan="2">{{'Year & Total'|trans}}</th>
                        <td>{{'0-5'|trans}}</td>
                        <td>{{'6-11'|trans}}</td>
                        <td>{{'12-23'|trans}}</td>
                        <td>{{'24-59'|trans}}</td>
                        <td>{{'Unknown'|trans}}</td>
                    </tr>
                    </thead>
                    {% for res in results %}
                    <tr>
                        <td>{{ res.year }}</td>
                        <td>{{ attribute(res,0) }}</td>
                        <td>{{ attribute(res,1) }}</td>
                        <td>{{ attribute(res,2) }}</td>
                        <td>{{ attribute(res,3) }}</td>
                        <td>{{ attribute(res,4) }}</td>
                        <td>{{ attribute(res,-1) }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="widget-box">
            <div class="widget-header widget-header-small header-color-blue">
                <h5>{{'Filters'|trans}}</h5>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form method="POST" action="{{path('reportAnnualAgeDistribution')}}" class="reportFilters">
                        {{form_rest(form)}}
                    </form>                        
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
