{%extends "NSSentinelBundle::layout.html.twig" %}

{% block pagetitle %}
{{'Create / Edit %type% For %id%'|trans({'%id%': id,'%type%': type})}}
{% endblock %}

{% block body %}
    {{form_errors(form)}}

<form method="POST" action="{{path('rotavirus'~type~'Edit',{'id':id})}}" novalidate>
<div class="row">
    {{form_errors(form)}}
    <div class="col-sm-3 col-md-3 col-lg-3" >
        <div class="widget-box">
            <div class="widget-header widget-header-small header-color-blue"><h4 class="panelTitle">{{'Lab Information'|trans}}</h4></div>
            <div class="widget-body">
                <div class="widget-main">
                    {{form_row(form.labId)}}
                    {{form_row(form.eiaResult)}}
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3" >
        <div class="widget-box">
            <div class="widget-header widget-header-small header-color-blue"><h4 class="panelTitle">{{'Genotyping Results'|trans}}</h4></div>
            <div class="widget-body">
                <div class="widget-main">
                    {{form_row(form.genotypingDate)}}
                    {{form_row(form.genotypingResultG)}}
                    {{form_row(form.genotypingResultGSpecify)}}
                    {{form_row(form.genotypeResultP)}}
                    {{form_row(form.genotypeResultPSpecify)}}
                    {{form_row(form.pcrVp6Result)}}
                </div>
            </div>
        </div>
    </div>    
    <div class="col-sm-3 col-md-3 col-lg-3" >
        <div class="widget-box">
            <div class="widget-header widget-header-small header-color-blue"><h4 class="panelTitle">{{'Results Sent'|trans}}</h4></div>
            <div class="widget-body">
                <div class="widget-main">
                    {{form_row(form.genotypeResultSentToCountry)}}
                    {{form_row(form.genotypeResultSentToWHO)}}
                </div>
            </div>
        </div>
    </div>
</div>    
<div class="form-actions center">
    <button type="submit" class="btn btn-sm btn-success">{{'Save'|trans}}<i class="icon-arrow-right icon-on-right bigger-110"></i></button>
</div>
    {{form_rest(form)}}
</form>
{% endblock %}