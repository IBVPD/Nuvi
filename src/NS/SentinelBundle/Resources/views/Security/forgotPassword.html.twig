{% extends "NSAceBundle::login.html.twig" %}

{% block body %}
<div class="login-container">
    <div class="center">
        <h1><img src="/bundles/nssentinel/images/logo.jpg" /></h1>
        <h7 class="blue">&copy; New Level Thinking & Noblet Solutions</h7>
    </div>

    <div class="space-6"></div>
    {% if error %}
    <div class="alert alert-danger">
        <strong>
            <i class="icon-remove"></i>
        </strong>
        {{error}}
        <br>
    </div>
    {% endif %}

    <div class="position-relative">
        <div id="login-box" class="login-box visible widget-box no-border">
            <div class="widget-body">
                 <div class="widget-main">
                    <h4 class="header blue lighter bigger"><i class="icon-coffee green"></i> {{'Please Provide Your Email Address'|trans}}</h4>
                        <div class="space-6"></div>
                        <form id="login_form" action="{{ path('forgottenPassword') }}" method="post">
                            <fieldset>
                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        <input type="text" id="username" name="_username" required class="form-control" placeholder="{{'Email / Username'|trans}}" />
                                        <i class="icon-user"></i>
                                    </span>
                                </label>

                                <div class="space"></div>

                                <div class="clearfix">
                                    <button type="submit" id="login" style="" class="pull-right btn btn-sm btn-primary">
                                        <i class="icon-key"></i>{{'Reset Password'|trans}}
                                    </button>
                                </div>

                                <div class="space-4"></div>
                            </fieldset>
                        </form>
                 </div><!--/widget-main-->
            </div><!--/widget-body-->
        </div><!--/login-box-->
    </div>
</div>
{% endblock %}
